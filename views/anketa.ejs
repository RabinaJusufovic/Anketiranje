    <meta charset="utf-8">
</head>
<body>
<h1><%= title %></h1>
<br>
<div style="padding: 5%">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Pitanja: </th>
        </tr>
        </thead>
        <%for(var i=0; i<pitanja.length; i++) {%>
            <tr>
                <td><%= pitanja[i].pitanje%> <input type="checkbox" onclick="dodaj(<%=pitanja[i].id%>)" name="p"></td>
            </tr>
        <%}%>
    </table>
    <br>
    <a href="/pitanja" ><button type="button" class="btn btn-success" type="submit">Dalje</button></a>
    <br>
    <br>
    <form>
        <div class="form-group">
            <label for="pitanje">Dodaj pitanje: </label>
            <input type="textarea" class="form-control" id="pitanje" >
        </div>
        <button type="submit" class="btn btn-success" onclick="add()">Dodaj</button>
    </form>
</div>

<script>

    function dodaj(id) {
        $.ajax({
            url: '/anketa/'+id,
            method: 'POST'
        }).done(function(result){
            res.sendStatus(200);
        });
    }

    function add() {
        var p=document.getElementById('pitanje').value;
        $.ajax({
            url: '/dodaj/'+p,
            method: 'POST'
        }).done(function(result){
            location.reload();
        });
    }


</script>

</body>
</html>